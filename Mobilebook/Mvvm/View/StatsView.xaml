<UserControl x:Class="Mobilebook.Mvvm.View.Stats"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Mobilebook.Mvvm.View"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <Grid>
        <StackPanel>
            <TextBlock Text="Статистика"
                   Foreground="White"
                   FontSize="28"
                   HorizontalAlignment="Left"
                   Margin="0,0,0,20"/>
            <TextBlock Margin="10, 10, 10, 5" Text="Общее количество звонков" Foreground="White" FontSize="22"/>
            <TextBlock Margin="10, 0, 10, 5" Foreground="White" FontSize="18" x:Name="Countblock"/>
        </StackPanel>
    </Grid>
</UserControl>
